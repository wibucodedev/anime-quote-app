#:import hex kivy.utils.get_color_from_hex

<Main>:
    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding: [15,20,15,20]

        BoxLayout:
            id: main_header
            orientation: 'horizontal'
            size_hint: 1, None
            height: self.minimum_height

            canvas.before:
                Color:
                    rgba: (0,0,0,1)
                Line:
                    width: 1
                    rectangle: self.x, self.y, self.width, self.height

            Label:
                id: anime_quote_text
                text: "Anime Quote"
                font_size: sp(18)
                font_name: './assets/fonts/inter/static/inter-SemiBold.ttf'
                font_weight: 700
                color: (90/255, 164/255, 176/255, 1)
                halign: "left"
                valign: "middle"
                color: hex("#5AA4B0")

                # make this label class fit into text's texture_size
                size_hint: None, None
                size: self.texture_size

            AnchorLayout:
                anchor_x: "right"
                pos: self.parent.pos

                Image:
                    source: './assets/icons/info.png'
                    size_hint: None, None
                    width: 24
                    height: 24


        BoxLayout:
            orientation: 'vertical'